%p#notice= notice
%h1 Chat Groups
%table
  %thead
    %tr
      %th{:colspan => "3"}
  %tbody
    - @chat_groups.each do |chat_group|
      %tr
        %td= link_to 'Show', chat_group
        %td= link_to 'Edit', edit_chat_group_path(chat_group)
        %td= link_to 'Destroy', chat_group, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Chat Group', new_chat_group_path
